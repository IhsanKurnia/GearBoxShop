<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="vertical"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:animationCache="true"
    app:cardCornerRadius="8dp"
    app:cardBackgroundColor="#846AD3">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_item_mobil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            tools:src="@drawable/ls_01" />

        <TextView
            android:id="@+id/tv_name_cars"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/img_item_mobil"
            android:fontFamily="@font/roboto_bold"
            android:text="Nama Kendaraan"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_years"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_name_cars"
            android:layout_marginStart="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/img_item_mobil"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center_vertical"
            android:paddingTop="18dp"
            android:text="Tahun"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_manufacture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_name_cars"
            android:layout_marginStart="1dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@+id/img_item_mobil"
            android:fontFamily="@font/roboto_bold"
            android:gravity="clip_vertical"
            android:paddingTop="16dp"
            android:text="Pabrikan"
            android:textColor="#fff"
            android:textSize="18dp" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>