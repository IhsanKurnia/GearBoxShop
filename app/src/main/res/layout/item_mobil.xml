<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:animationCache="true"
        app:cardBackgroundColor="@color/ungu12"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <ImageView
                android:id="@+id/img_item_mobil"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_list_photo"
                android:scaleType="centerCrop"
                tools:src="@drawable/ls_01" />

            <TextView
                android:id="@+id/tv_name_cars"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_item_mobil"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/raleway_bold"
                android:text="Nama Kendaraan"
                android:textColor="#fff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_cars"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/raleway_regular"
                android:paddingTop="3dp"
                android:text="Tahun"
                android:textColor="#fff"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_manufacture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_years"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:paddingTop="3dp"
                android:fontFamily="@font/raleway_thin"
                android:text="Pabrikan"
                android:textColor="#fff"
                android:textSize="16dp" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>