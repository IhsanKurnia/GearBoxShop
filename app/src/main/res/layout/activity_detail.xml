<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context=".DetailMobilActivity">

    <!--Navigasi Detail-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:background="@color/colorAccent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/raleway_medium"
            android:text="Review Mobil"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>
    <!--Navigasi-->


    <!--ScrollView Content-->
    <ScrollView
        android:id="@+id/scroll_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <!--Content Titile-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/cardview_default_radius"
            android:orientation="vertical"
            android:paddingBottom="20dp">
            <!--Content Image-->
            <ImageView
                android:id="@+id/iv_gambar_mobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:adjustViewBounds="true"
                android:background="@drawable/card"
                android:scaleType="fitXY"
                android:src="@drawable/ls_01" />
            <!--Content Image-->

            <TextView
                android:id="@+id/tv_nama_mobil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:background="@color/colorAccent"
                android:fontFamily="@font/raleway_medium"
                android:padding="15dp"
                android:text="Nama Mobil"
                android:textColor="#fff"
                android:textSize="20sp" />
            <!--content Title-->

            <!--Content Detail-->
            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/detail"
                android:fontFamily="@font/raleway_regular"
                android:justificationMode="inter_word"
                android:lineSpacingMultiplier="1"
                android:padding="8dp"
                android:paddingBottom="8dp"
                android:text="@string/detail_01"
                android:textColor="#000"
                android:textSize="14dp" />
            <!--Content Detail-->

            <!--Content Title Spek-->
            <TextView
                android:id="@+id/tv_spesifikasi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:background="@color/colorAccent"
                android:drawablePadding="8dp"
                android:fontFamily="@font/raleway_medium"
                android:padding="15dp"
                android:text="Kesimpulan"
                android:textColor="#fff"
                android:textSize="20sp" />
            <!--Content title Spek-->

            <!--content tahun-->
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="20dp"
                        android:padding="10dp"
                        app:cardBackgroundColor="#4527A0"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:src="@drawable/kalender" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Release"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                android:textSize="14dp"
                                android:textColor="#fff"
                                android:fontFamily="@font/raleway_semibold" />

                            <TextView
                                android:id="@+id/tv_tahun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tahun: 2019"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:fontFamily="@font/raleway_regular"
                                android:textColor="#fff" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!--End Content tahun-->

                    <!--Manufacture-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="20dp"
                        android:padding="10dp"
                        app:cardBackgroundColor="#C62828"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/tv_merk"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle"
                                android:src="@drawable/mk_01" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pabrikan"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                android:textSize="14dp"
                                android:textColor="#fff"
                                android:fontFamily="@font/raleway_semibold" />

                            <TextView
                                android:id="@+id/tv_pabrikan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aston Martin"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:fontFamily="@font/raleway_regular"
                                android:textColor="#fff" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!--End Manufacture-->

                    <!--Performance-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="20dp"
                        android:padding="10dp"
                        app:cardBackgroundColor="#4527A0"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/tv_permance"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle"
                                android:src="@drawable/performa" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Performance"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                android:textSize="14dp"
                                android:textColor="#fff"
                                android:fontFamily="@font/raleway_semibold" />

                            <TextView
                                android:id="@+id/tv_cc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2500 (cc)"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:fontFamily="@font/raleway_regular"
                                android:textColor="#fff" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <!--End Performance-->

                    <!--Transmision-->
                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="20dp"
                        android:padding="10dp"
                        app:cardBackgroundColor="#4527A0"
                        app:cardCornerRadius="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/tv_lg"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle"
                                android:src="@drawable/sp_lg" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GearBox"
                                android:layout_gravity="center"
                                android:padding="8dp"
                                android:textSize="14dp"
                                android:textColor="#fff"
                                android:fontFamily="@font/raleway_semibold" />

                            <TextView
                                android:id="@+id/tv_transmision"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="8-Speed"
                                android:layout_gravity="center"
                                android:textSize="16dp"
                                android:fontFamily="@font/raleway_regular"
                                android:textColor="#fff" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <!--Transmision-->
                </LinearLayout>
            </HorizontalScrollView>


            <!--About me-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway_medium"
                android:gravity="center"
                android:padding="10dp"
                android:text="About me"
                android:textColor="#fff"
                android:textSize="20sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="20dp"
                android:padding="10dp"
                app:cardBackgroundColor="#fff"
                app:cardCornerRadius="8dp">

                <ImageView
                    android:id="@+id/user"
                    android:layout_width="100dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center_horizontal"
                    android:adjustViewBounds="true"
                    android:padding="8dp"
                    android:src="@drawable/user_pic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="90dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:padding="5dp"
                    android:text="Ihsan Kurnia"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="120dp"
                    android:fontFamily="@font/raleway_light"
                    android:text="@string/quotes"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/btn_ab"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/btn_primary_circle"
                    android:padding="8dp" />
            </androidx.cardview.widget.CardView>
            <!--About me-->
            <!--End Content Penutup-->
        </LinearLayout>

        <!-- End Scroll Horizontal-->

    </ScrollView>
    <!--    Scroll Content-->
</LinearLayout>
